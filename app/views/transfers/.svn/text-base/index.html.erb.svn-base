<% content_for :shortcuts do %>
  <dl class="first">
	  <dt><%= image_tag "new.png" %></dt>
  	<dd><%= link_to t("transfer.action.new"), new_transfer_path %></dd>
  	<dd class="last"><%= t "transfer.shortcut.new" -%></dd>
  </dl>
<% end %>

<h2><%= t "transfer.title.index" -%></h2>

<table class="stylized full">
	<thead>
		<tr>
		  <th><%= t "model.amount" -%></th>
      <th><%= t "model.from" -%></th>
      <th><%= t "model.to" -%></th>
      <th><%= t "model.date" -%></th>
      <th></th>
		</tr>
	</thead>
	<tbody>
	  <% @transfers.each do |transfer| %>
      <tr>
        <td class="ta-right"><%= number_to_currency transfer.amount %></td>
        <td><%= link_to transfer.source.description, transfer.source %></td>
        <td><%= link_to transfer.target.description, transfer.target %></td>
        <td><%= l transfer.created_at, :format => :long %></td>
        <td><%= link_to t("action.show"), transfer, :class => "btn" %></td>
      </tr>
    <% end %>
	</tbody>
</table>
<%= will_paginate @transfers %>

