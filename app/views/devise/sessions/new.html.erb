<h2><%= t("devise.common.sign_in") %></h2>
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :class => "box box-#{name}" %>
<% end %>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p>
    <%= f.label :username, :class => "required" %><br />
    <%= f.text_field :username, :class => "full"%>
  </p>
  <p>
    <%= f.label :password, :class => "required" %><br />
    <%= f.password_field :password, :class => "full" %>
  </p>
  <p>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, :class => "choice" %>
  </p>
  <p>
    <%= f.submit t("devise.common.sign_in"), :class => "btn btn-green big" %>
  </p>
<% end %>