<% content_for :title do @user.fullname end %>

<% content_for :shortcuts do %>
  <dl class="first">
    <dt><%= image_tag "edit_user.png" %></dt>
  	<dd><%= link_to t("action.edit"), edit_admin_user_path(@user) %></dd>
  	<dd><%= t "user.shortcut.edit" -%></dd>
  	<dt><%= image_tag "accounts.png" %></dt>
  	<dd><%= link_to t("model.account").pluralize.capitalize, admin_user_accounts_path(@user) %></dd>
  	<dd><%= t "account.shortcut.index" -%></dd>
  	<dt><%= image_tag "transfers.png" %></dt>
  	<dd><%= link_to t("model.transfer").pluralize.capitalize, admin_user_transfers_path(@user) %></dd>
  	<dd><%= t "transfer.shortcut.index" -%></dd>
	  <dt><%= image_tag "delete.png" %></dt>
  	<dd><%= link_to t("action.delete"), admin_user_path(@user), :confirm => t("action.are_you_sure?"), :method => :delete %></dd>
  	<dd class="last"><%= t "user.shortcut.delete" -%></dd>
  </dl>
<% end %>

<h2><%= t "layout.user_information" -%></h2>

<dl>
  <dt><%= labelize "model.address" -%></dt>
  <dd>
    <%= @user.street %><br />
    <%= @user.zip_code %> <%= @user.city %><br />
    <%= @user.country %>
  </dd>
</dl>

<dl>
  <dt><%= labelize "model.phone" -%></dt>
  <dd><%= @user.phone %></dd>
</dl>

<dl>
  <dt><%= labelize "model.email" -%></dt>
  <dd><%= mail_to @user.email %></dd>
</dl>