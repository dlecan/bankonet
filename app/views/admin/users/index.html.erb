<% content_for :title do t("user.title.index") end %>

<% content_for :shortcuts do %>
  <dl class="first">
    <dt><%= image_tag "new_user.png" %></dt>
  	<dd><%= link_to t("user.action.new"), new_admin_user_path %></dd>
  	<dd class="last"><%= t("user.shortcut.new") -%></dd>
  </dl>
<% end %>

<br />

<div class="box box-info"><%= t("user.info") -%></div>

<%= will_paginate @users %>
<table class="stylized full">
  <thead>
    <tr>
      <th></th>
      <th><%= t "model.username" -%></th>
      <th><%= t "model.firstname" -%></th>
      <th><%= t "model.lastname" -%></th>
      <th><%= t "model.signed_up_at" -%></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, index| %>
    <tr>
      <td><%= index + @users.offset + 1 %></td>
      <td><%= link_to user.username, admin_user_path(user) %></td>
      <td><%= user.firstname %></td>
      <td><%= user.lastname %></td>
      <td><%= l user.created_at, :format => :long %></td>
      <td>
        <%= link_to t("action.edit"), edit_admin_user_path(user), :class => "btn" %>
        <%= link_to t("action.delete"), admin_user_path(user), :confirm => t("action.are_you_sure?"), :method => :delete, :class => "btn btn-red" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @users %>